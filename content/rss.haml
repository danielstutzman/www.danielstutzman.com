- posts = @pages.find(:all, :in_directory => '2011', :recursive => true, :sort_by => 'date', :reverse => true, :limit => 6)

!!! XML
%rss{ :version => "2.0" } 
  %channel 
    %title Daniel Stutzman
    %link http://www.danielstutzman.com/
    %description
      Going Diagonal: A Boulder web developer shares tech reviews and how-tos
    %language en-us 
    %pubDate= Time.now.gmtime.strftime('%a, %d %b %Y %H:%M:%S %z')
    - for post in posts
      %item 
        %title= post.title 
        %link= "http://www.danielstutzman.com#{post.url.gsub(/\.html$/, '')}"
        %guid= "http://www.danielstutzman.com#{post.url.gsub(/\.html$/, '')}"
        %pubDate
          = Date.parse(post.date.to_s).strftime('%a, %d %b %Y %H:%M:%S %z')
        %description= render(post)
